<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_list_sessions">
            <field name="name">Sessions List</field>
            <field name="res_model">open_academy.sessions</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sessions" parent="menu_open_academy" name="Sessions" sequence="2" action="action_list_sessions" />

        <record model="ir.ui.view" id="open_academy_sessions_tree">
            <field name="name">Sessions list</field>
            <field name="model">open_academy.sessions</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="fecha_inicio"/>
                    <field name="duracion"/>
                    <field name="capacidad"/>
                    <field name="instructor"/>
                    <field name="field_many2one"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="open_academy_sessions_view_form">
            <field name="name">open_academy.sessions.view.form</field>
            <field name="model">open_academy.sessions</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <form string="Idea_form">
                    <header></header>
                    <sheet>
                        <group >
                            <group >
                                <field name="name"/>
                            </group>

                            <group >
                                <field name="fecha_inicio"/>
                            </group>

                            <group >
                                <field name="duracion"/>
                            </group>

                            <group >
                                <field name="capacidad"/>
                            </group>

                            <group >
                                <field name="instructor"/>
                            </group>

                            <group >
                                <field name="field_many2one"/>
                            </group>

                        </group>
                    </sheet>
                    
                </form>
            </field>
        </record>

    </data>
</odoo>
